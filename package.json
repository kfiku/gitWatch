{
  "name": "GitWatch",
  "version": "1.0.0",
  "description": "electron app to watch git repos",
  "main": "main.js",
  "scripts": {
    "dev": "export NODE_ENV=dev && concurrently 'npm run lint' 'npm run css-w' 'npm run ts-w' 'npm start -- dev'",
    "lint": "tslint src/**/*.tsx src/**/*.ts -c tslint.json",
    "clean": "find src -name \"*.js*\" -type f -delete",
    "test": "npm run test:cov",
    "test:cov": "ts-node ./node_modules/istanbul/lib/cli.js cover -e .ts ./node_modules/.bin/_mocha test/unit/**/*.ts",
    "test:unit": "npm run clean && ts-node ./node_modules/.bin/_mocha test/unit/**/*.ts",
    "start": "electron .",
    "css": "postcss -o src/css/bundle.css -u precss src/css/all.css",
    "ts": "tsc",
    "css-w": "npm run css -- -w",
    "ts-w": "npm run ts -- -w",
    "test:unit-w": "chokidar test/unit/**/*.ts src/**/*.ts -c 'npm run test:unit' "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfiku/gitWatch.git"
  },
  "keywords": [
    "Electron",
    "Git",
    "watch"
  ],
  "author": "Grzegorz Klimek",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kfiku/gitWatch/issues"
  },
  "homepage": "https://github.com/kfiku/gitWatch",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.46",
    "chai": "^3.5.0",
    "chokidar": "^1.6.0",
    "chokidar-cli": "^1.2.0",
    "css-loader": "^0.25.0",
    "electron": "^1.4.5",
    "electron-devtools-installer": "^2.0.1",
    "istanbul": "^1.0.0-alpha.2",
    "postcss": "^5.2.0",
    "postcss-cli": "^2.6.0",
    "precss": "^1.4.0",
    "source-map-loader": "^0.1.5",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.2.0",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.0-dev.1",
    "typescript": "^2.0",
    "typings": "^2.0.0"
  },
  "dependencies": {
    "@types/async": "^2.0.32",
    "@types/electron": "^1.4.24",
    "@types/glob": "^5.0.30",
    "@types/moment": "^2.13.0",
    "@types/node": "^6.0.45",
    "@types/react": "^0.14.41",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux": "^3.6.31",
    "@types/redux-logger": "^2.6.32",
    "async": "^2.0.1",
    "bulma": "^0.2.3",
    "classnames": "~2.2.5",
    "concurrently": "^3.1.0",
    "director": "~1.2.8",
    "electron-settings": "^2.2.1",
    "font-awesome": "^4.6.3",
    "moment": "^2.16.0",
    "precss": "^1.4.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "simple-git": "^1.48.0"
  }
}
