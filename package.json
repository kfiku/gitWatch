{
  "name": "piGit",
  "version": "0.1.0",
  "description": "electron app to watch git repos",
  "main": "main.js",
  "scripts": {
    "test": "npm run lint && npm run test:cov",
    "postinstall": "npm run build",
    "dev": "export NODE_ENV=dev && concurrently 'npm run css-w' 'npm run ts-w' 'npm start -- dev'",
    "lint": "tslint src/**/*.tsx src/**/*.ts -c tslint.json",
    "clean": "find src -name \"*.js*\" -type f -delete",
    "test:cov": "npm run ts && ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha test/unit/**/*.js",
    "test:unit": "npm run clean && ts-node ./node_modules/.bin/_mocha test/unit/**/*.ts",
    "build": "npm run css && npm run ts",
    "start": "electron .",
    "css": "postcss -o src/css/bundle.css -u precss src/css/all.css",
    "ts": "tsc",
    "css-w": "npm run css -- -w",
    "ts-w": "npm run ts -- -w",
    "package": "electron-packager . --all",
    "test:unit-w": "chokidar test/unit/**/*.ts src/**/*.ts -c 'npm run test:unit' "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kfiku/piGit.git"
  },
  "keywords": [
    "Electron",
    "Git",
    "watch"
  ],
  "author": {
    "name": "Grzegorz Klimek",
    "email": "kfiku.com@gmail.com",
    "url": "https://github.com/kfiku"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kfiku/piGit/issues"
  },
  "homepage": "https://github.com/kfiku/piGit",
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/mocha": "^2.2.32",
    "chai": "^3.5.0",
    "chokidar": "^1.6.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.0",
    "devtron": "^1.4.0",
    "electron": "^1.4.5",
    "electron-devtools-installer": "^2.0.1",
    "electron-installer-debian": "^0.4.0",
    "electron-debug": "^1.1.0",
    "electron-packager": "^8.3.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.1.2",
    "postcss": "^5.2.0",
    "postcss-cli": "^2.6.0",
    "precss": "^1.4.0",
    "release-it": "^2.5.1",
    "ts-node": "^1.7.0",
    "tslint": "^4.0.0-dev.1",
    "typescript": "^2.0"
  },
  "dependencies": {
    "@types/async": "^2.0.32",
    "@types/electron": "^1.4.24",
    "@types/moment": "^2.13.0",
    "@types/node": "^6.0.45",
    "@types/react": "^0.14.41",
    "@types/react-dom": "^0.14.18",
    "@types/react-redux": "^4.4.32",
    "@types/redux": "^3.6.31",
    "@types/redux-logger": "^2.6.32",
    "@types/sortablejs": "^1.3.30",
    "async": "^2.0.1",
    "bulma": "^0.2.3",
    "classnames": "~2.2.5",
    "electron-settings": "^2.2.1",
    "font-awesome": "^4.6.3",
    "moment": "^2.16.0",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "simple-git": "^1.48.0",
    "sortablejs": "^1.5.0-rc1"
  }
}
